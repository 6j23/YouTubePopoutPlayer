{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "version": "<%= package.version %>",
  "description": "__MSG_ExtensionDescription__",
  "homepage_url": "<%= package.homepage %>",
  "default_locale": "en",
  "icons": {
    "48": "logo.svg",
    "96": "logo.svg"
  },
  "permissions": [
    "*://*.youtube.com/*",
    "*://*.youtube-nocookie.com/"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/"
      ],
      "js": [
        "scripts/browser-polyfill.min.js",
        "scripts/<%= package.name %>.js"
      ]
    }
  ]
}