{
  "manifest_version": 2,
  "name": "__MSG_ExtensionName__",
  "version": "<%= package.version %>",
  "description": "__MSG_ExtensionDescription__",
  "homepage_url": "<%= package.homepage %>",
  "default_locale": "en",
  "icons": {
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "js/browser-polyfill.js",
        "js/<%= package.name %>.js"
      ]
    }
  ],
  "permissions": [
    "*://*.youtube.com/*"
  ]
}